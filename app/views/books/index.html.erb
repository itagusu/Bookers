<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
        <tr>

        </tr>
    </thead>
    <tbody>
        <tr>
         <% @books.each do|book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            
            <td>
            <%= link_to "Show", book_path(book.id) %>
            </td>
            <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
            </td>
            <td>
            <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </td>
        </tr>
         <% end %>
    </tbody>
</table>

<h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>

<% end %>